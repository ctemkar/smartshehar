<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_focused="true">
        <shape>
            <solid
                android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/ab_background_focussed" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
    <item  android:state_focused="false">
        <shape>
            <solid
                android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/ab_background_focussed" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>

</selector>
