        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chkMRU">

            <EditText
                android:id="@+id/etMRUId"
                style="@style/driverProfile"
                android:hint="@string/id_no"
                android:inputType="text"
                android:textSize="20sp"
                android:visibility="gone" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/chkBMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BMC"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chkBMC">

            <EditText
                android:id="@+id/etBMCId"
                style="@style/driverProfile"
                android:hint="@string/id_no"
                android:inputType="text"
                android:textSize="20sp"
                android:visibility="gone" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/chkECA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ECA"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chkECA">

            <EditText
