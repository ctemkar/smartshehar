        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etReceiptNo"
                style="@style/driverProfile"
                android:drawableLeft="@mipmap/ic_star"
                android:hint="@string/receiptnoone" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etReceiptDae"
                style="@style/driverProfile"
                android:drawableLeft="@mipmap/ic_star"
                android:drawableRight="@mipmap/ic_calendar"
                android:hint="@string/receiptdate" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etReceiptNoTwo"
                style="@style/driverProfile"
                android:hint="@string/receiptnotwo"
                android:visibility="gone" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etReceiptDateTwo"
                style="@style/driverProfile"
                android:drawableRight="@mipmap/ic_calendar"
                android:hint="@string/receiptdateTwo"
                android:visibility="gone" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etReceiptNoThree"
                style="@style/driverProfile"
                android:hint="@string/receiptnothree"
                android:visibility="gone" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etReceiptDateThree"
                style="@style/driverProfile"
                android:drawableRight="@mipmap/ic_calendar"
                android:hint="@string/receiptdateThree"
                android:visibility="gone" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/rlAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Add New Receipt"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:src="@mipmap/ic_add" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etRemark"
                style="@style/driverProfile"
                android:hint="@string/remark" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etInternalComment"
                style="@style/driverProfile"
                android:hint="@string/internal_comment" />

        </android.support.design.widget.TextInputLayout>


