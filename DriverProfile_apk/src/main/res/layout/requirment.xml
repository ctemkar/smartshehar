        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@mipmap/ic_star"
            android:text="@string/payment_amount"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/rgPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rb500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/five_hundred"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rb3000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three_thousand"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rb3500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three_thousand_five_hundred"
                android:textSize="20sp" />

        </RadioGroup>

