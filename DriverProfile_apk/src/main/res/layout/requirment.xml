<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llRequirement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@mipmap/ic_star"
            android:text="@string/how_driver_come"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/rgHowDriverCome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rbWalkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/walkin"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbReferral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/referral"
                android:textSize="20sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/txtByWhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/by_whome"
            android:drawableLeft="@mipmap/ic_star"
            android:textColor="@color/black"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/rgReferByWhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/rbSupervisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supervisor"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rbDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driver"
                android:textSize="20sp" />

        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etNameOfPerson"
                style="@style/driverProfile"
                android:drawableLeft="@mipmap/ic_star"
                android:hint="@string/name_of_person"
                android:visibility="gone" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/cab_needed"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/rgCab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rgCabYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rgCabNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textSize="20sp" />

        </RadioGroup>

