<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtCleanG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/cleanliness"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_cat_one"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtGarbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="@string/garbage"
            android:textColor="@color/light_maroon"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/AG"
            style="@style/issue_item_text"
            android:text="@string/AG" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/GNP"
            style="@style/issue_item_text"
            android:text="@string/GNP" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/SNS"
            style="@style/issue_item_text"
            android:text="@string/SNS" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/CDD"
            style="@style/issue_item_text"
            android:text="@string/CDD" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/GBB"
            style="@style/issue_item_text"
            android:text="@string/GBB" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_cat_two"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"

            android:padding="5dp"
            android:text="@string/drains"
            android:textColor="@color/light_maroon"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ODSL"
            style="@style/issue_item_text"
            android:text="@string/ODSL" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />


        <TextView
            android:id="@+id/COSL"
            style="@style/issue_item_text"
            android:text="@string/COSL" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_cat_three"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSanitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="2dp"

            android:padding="5dp"
            android:text="@string/sanitation"
            android:textColor="@color/light_maroon"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ODU"
            style="@style/issue_item_text"
            android:text="@string/ODU" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/DD"
            style="@style/issue_item_text"
            android:text="@string/DD" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/UPR"
            style="@style/issue_item_text"
            android:text="@string/UPR" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_cat_four"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="@string/pests"
            android:textColor="@color/light_maroon"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/MS"
            style="@style/issue_item_text"
            android:text="@string/MS" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/SDG"
            style="@style/issue_item_text"
            android:text="@string/SDG" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

        <TextView
            android:id="@+id/PGM"
            style="@style/issue_item_text"
            android:text="@string/PGM" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ab_background_focussed" />

    </LinearLayout>

</LinearLayout>