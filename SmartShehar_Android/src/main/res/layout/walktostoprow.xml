<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llWalkToStop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/imgWalk"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/walkToStop"
        android:fontFamily="monospace"
        android:paddingLeft="2dp"
        android:singleLine="false"
        android:src="@drawable/ic_walk"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgWalk"
        android:layout_marginLeft="2dp"
        android:background="#FFFFFF"
        android:padding="2dp"
        android:singleLine="false"
        android:text="@string/walkto"
        android:textColor="@color/HomeTextColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvWalkToStop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/imgWalk"
        android:background="#FFFFFF"
        android:padding="2dp"
        android:singleLine="false"
        android:text="Stop name goes here"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvWalkToStopDist"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tvWalkToStop"
        android:singleLine="false"
        android:text="15 min."
        android:textSize="18sp" />

</RelativeLayout>