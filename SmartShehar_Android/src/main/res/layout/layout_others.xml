<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llOthers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/internetErr"
    android:orientation="vertical"
    android:visibility="gone">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_cat_one"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/localapps"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llSafetyShield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSafety"
            style="@style/ImageView"
            android:contentDescription="@string/home_safetyshield"
            android:src="@mipmap/ic_safetyshield" />

        <TextView
            android:id="@+id/txtSafety"
            style="@style/TextView"
            android:fontFamily="sans-serif"
            android:text="@string/home_safetyshield" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sub_cat_two"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/downloadapps"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llJijo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivJijo"
            style="@style/ImageView"
            android:contentDescription="@string/jumpinjumpout"
            android:src="@mipmap/ic_jijo" />

        <TextView
            style="@style/TextView"
            android:fontFamily="sans-serif"
            android:text="@string/jumpinjumpout" />
    </LinearLayout>

</LinearLayout>