<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/BackgroundLight">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rlLongWait"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/HomeTextColor"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvLongwait"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/lemon_chiffon"
                android:gravity="center_horizontal"
                android:paddingLeft="2dp"
                android:text="@string/longWait"
                android:textAppearance="@style/colorRowBold"
                android:textColor="@color/red"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llRouteHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/BackgroundLight"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvVia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingRight="2dp"
                android:textAppearance="@style/hdr" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrey" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startTime"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/startStnAbbr"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRow" />

            <TextView
                android:id="@+id/platform1"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAppearance="@style/colorRow" />

            <TextView
                android:id="@+id/connSpeed1"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/linecode1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/connTime1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/connStnAbbr1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/colorRow" />

            <TextView
                android:id="@+id/cars1"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRow" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tvExtraLine1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="2dp" android:src="@mipmap/ic_ls"
            android:textAppearance="@style/colorRow"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dl2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstlast"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRowBold" />
            <!-- 		<TextView android:id="@+id/cars"
                        android:paddingLeft="2dp"
                        android:layout_width="60dp"
                        android:textAppearance="@style/colorRow"
                        android:layout_height="wrap_content"/>
             -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/connTime2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/connStnAbbr2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRow" />

            <TextView
                android:id="@+id/platform2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRow" />

            <TextView
                android:id="@+id/connSpeed2"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/linecode2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/destTime"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRowBold" />

            <TextView
                android:id="@+id/destStnAbbr"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/colorRow" />

            <TextView
                android:id="@+id/cars2"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textAppearance="@style/colorRow" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvExtraLine2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="2dp"
            android:textAppearance="@style/colorRow"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/train1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/train2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/totalTravelTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrey" />


        <LinearLayout
            android:id="@+id/rlTotalTravelTime"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/BackgroundLight"
            android:gravity="right"
            android:padding="2dp">


            <ImageView
                android:id="@+id/btnSMS"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/SMS"
                android:padding="5dp"
                android:src="@mipmap/ic_sms" />

            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/more"
                android:padding="5dp"
                android:src="@mipmap/ic_more" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>